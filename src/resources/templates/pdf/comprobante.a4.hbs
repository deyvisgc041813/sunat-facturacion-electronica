<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <style>
    body { 
      font-family: 'Roboto', Arial, sans-serif; 
      font-size: 11px; 
      margin: 40px; 
    }
    .header { display: flex; justify-content: space-between; align-items: center; }
    .header-left { width: 65%; display: flex; align-items: center; }
    .header-left img { width: 110px; margin-right: 15px; } /* logo mÃ¡s grande */
    .header-left .info b { font-size: 17px;   text-transform: uppercase; }
    .header-left .info {
      font-size: 12px;
      line-height: 1.1;   /* ðŸ‘ˆ junta las lÃ­neas (menos espacio arriba-abajo) */
    }

    .header-left .info p {
      margin: 2px 0;      /* ðŸ‘ˆ antes los <p> tienen ~10px, aquÃ­ casi nada */
    }
    .header-right {
      width: 30%;
      border: 1px solid black;
      padding: 10px;
      text-align: center;
      font-size: 13px;
      font-weight: bold;
    }
    .header-right p { margin: 5px 0; }
    .header-right .serie { font-size: 16px; font-weight: bold; } /* ðŸ‘ˆ mÃ¡s visible */
    
    .section { margin-top: 10px; font-size: 11px; }

    /* --- TABLA PRODUCTOS --- */
    table.items {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
      font-size: 11px;
    }
    table.items thead tr {
      border-top: 1px solid black;
      border-bottom: 1px solid black;
      background: #f2f2f2; /* sombreado leve */
    }
    table.items th {
      font-weight: bold;
      text-align: left;
      padding: 5px;
      border: none;
      font-size: 12px; /* cabeceras mÃ¡s visibles */
    }
    table.items td {
      padding: 5px;
      border: none;
    }
    table.items tbody tr:last-child {
      border-bottom: 1px solid black;
    }

    /* --- SECCIONES --- */
    .summary { 
      margin-top: 10px; 
      text-align: right; 
      font-size: 12px; 
    }
    .summary p { margin: 3px 0; font-weight: bold; } /* ðŸ‘ˆ totales mÃ¡s fuertes */

    .qr { margin-top: 10px; text-align: right; }
    .qr p { font-size: 9px; }
    .condiciones { margin-top: 15px; font-size: 13px; }
    .footer { font-size: 11px; text-align: center; margin-top: 50%; font-weight: bolder; }
    .footer a { color: black; font-weight: bolder; text-decoration: none; cursor: pointer; }
  </style>
</head>
<body>
  <!-- Header -->
  <div class="header">
    <div class="header-left">
      <img src="{{logo}}" alt="logo"/>
      <div class="info">
        <p><b>{{empresa}}</b></p>
        <p>RUC: {{rucEmpresa}}</p>
        <p>{{direccionEmpresa}}</p>
        <p>Central telefÃ³nica: {{telefonoEmpresa}}</p>
        <p>Email: {{emailEmpresa}}</p>
      </div>
    </div>
    <div class="header-right">
      <p>{{titleComprobante}}</p>
      <p>ELECTRÃ“NICA</p>
      <p class="serie">{{serie}}</p>
    </div>
  </div>

  <!-- Datos cliente -->
  <div class="section">
    <p><b>FECHA DE EMISIÃ“N:</b> {{fechaEmision}}</p>
    <p><b>FECHA DE VENCIMIENTO:</b> {{fechaVencimiento}}</p>
    <p><b>CLIENTE:</b> {{cliente}}</p>
    <p><b>{{tipoDocLabel}}:</b> {{numeroDocumento}}</p>
    <p><b>DIRECCIÃ“N:</b> {{direccionCliente}}</p>
    {{#if telefonoCliente}}
      <p><b>TELÃ‰FONO:</b> {{telefonoCliente}}</p>
    {{/if}}
  </div>

  <!-- Productos -->
  <table class="items">
    <thead>
      <tr>
        <th>CANT.</th><th>UNIDAD</th><th>DESCRIPCIÃ“N</th>
        <th>P.UNIT</th><th>DTO.</th><th>TOTAL</th>
      </tr>
    </thead>
    <tbody>
      {{#each items}}
      <tr>
        <td>{{cantidad}}</td>
        <td>{{unidad}}</td>
        <td>{{descripcion}}</td>
        <td>{{pUnit}}</td>
        <td>{{descuento}}</td>
        <td>{{total}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <!-- Totales -->
  <div class="summary">
    {{#gt opGravadas 0}}
      <p>OP. GRAVADAS: S/ {{opGravadas}}</p> <br>
    {{/gt}}
    {{#gt opExoneradas 0}}
      <p>OP. EXONERADAS: S/ {{opExoneradas}}</p> <br>
    {{/gt}}
    {{#gt opInafectas 0}}
      <p>OP. INAFECTAS: S/ {{opInafectas}}</p> <br>
    {{/gt}}

    <p>IGV: S/ {{igv}}</p>
    <p style="font-size: 12px;">TOTAL A PAGAR: S/ {{total}}</p> <!-- ðŸ‘ˆ mÃ¡s grande -->
  </div>

  <!-- Monto en letras -->
  <p><b>SON:</b> {{montoLetras}}</p>

  <!-- QR -->
  <div class="qr">
    <img src="{{qrPath}}" width="120" />
    <p>CÃ³digo Hash: {{hash}}</p>
  </div>

  <!-- CondiciÃ³n de pago -->
  <div class="condiciones">
    <p><b>CONDICIÃ“N DE PAGO:</b> {{condicionPago}}</p>
    <p><b>PAGOS:</b></p>
    <p>â€¢ {{medioPago}} - S/ {{total}}</p>
    <p><b>Vendedor:</b> {{vendedor}}</p>
  </div>

  <!-- Footer -->
  <div class="footer">
    <u ></u>
    <p ></p>
    <a href="{{urlConsulta}}" target="_blank">Para consultar el comprobante ingresar a {{urlConsulta}}</a>

  </div>
</body>
</html>
